<script>
    document.querySelectorAll('.quantity-input').forEach(input => {
        input.addEventListener('change', async function() {
            const itemId = this.dataset.itemId;
            const newQuantity = Number(this.value);

            // Check quantity validity
            if (newQuantity < 1 || newQuantity > Number(this.max)) {
                alert('Please enter a valid quantity.');
                return;
            }

            // Fetch updated total price
            try {
                const response = await fetch(`/cart/update-quantity/${itemId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ newQuantity })
                });

                if (response.ok) {
                    const updatedItem = await response.json();
                    const itemTotalPriceElement = this.closest('tr').querySelector('.item-total-price');
                    itemTotalPriceElement.textContent = updatedItem.totalPrice.toFixed(2);

                    // Update cart subtotal
                    const cartSubtotal = Array.from(document.querySelectorAll('.item-total-price'))
                        .reduce((total, priceElem) => total + parseFloat(priceElem.textContent), 0);
                    document.getElementById('cart-subtotal').textContent = cartSubtotal.toFixed(2);

                    // Update total if needed
                    document.getElementById('cart-total').textContent = cartSubtotal.toFixed(2);
                } else {
                    const errorText = await response.text();
                    alert(`Error: ${errorText}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An unexpected error occurred.');
            }
        });
    });
</script>
