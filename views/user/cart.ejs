            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-9">
                                <table class="table table-cart table-striped">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (cart.items.length === 0) { %>
                                            <tr>
                                                <td colspan="4" class="text-center">Your cart is empty.</td>
                                            </tr>
                                        <% } else { %>
                                            <% let hasOutOfStockItems = false; %>
                                            <% cart.items.forEach(item => { %>
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <img src="/uploads/<%= item.productId.images[0] %>" alt="<%= item.productId.name %>" class="img-fluid cart-product-image" style="height: 50px; width: 50px; margin-left: 10px;">
                                                            <div class="ml-3">
                                                                <h5 class="cart-product-name"><%= item.productId.name %></h5>
                                                            </div>
                                                        </div>
                                                    </td>
            
                                                    <td>
                                                        <% if (item.productId.variants[0].stock > 0) { %>
                                                            <div class="quantity-container">
                                                                <input type="number" name="quantity" value="<%= Number(item.quantity) %>" min="1" max="<%= Number(item.productId.variants[0].stock) < 10 ? Number(item.productId.variants[0].stock) : 10 %>" required class="form-control quantity-input mx-2" data-item-id="<%= item._id %>">
                                                            </div>
                                                        <% } else { %>
                                                            <span class="text-danger">Out of Stock</span>
                                                        <% } %>
                                                    </td>
            
                                                    <% if (item.productId.variants[0].stock > 0) { %>
                                                        <td>₹<span class="item-total-price"><%= item.totalPrice.toFixed(2) %></span></td>
                                                    <% } else { %>
                                                        <td class="text-danger">Out of Stock</td>
                                                    <% } %>
            
                                                    <td>
                                                        <form action="/cart/remove/<%= item._id %>" method="POST" class="remove-form">
                                                            <button type="button" class="btn btn-outline-danger btn-sm remove-btn">Remove</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
            
                            <aside class="col-lg-3">
                                <div class="summary summary-cart">
                                    <h3 class="summary-title">Cart Total</h3>
                                    <table class="table table-summary">
                                        <tbody>
                                            <tr class="summary-subtotal">
                                                <td>Subtotal:</td>
                                                <td>
                                                    ₹<span id="cart-subtotal">
                                                        <%= cart.items.reduce((total, item) => total + item.totalPrice, 0).toFixed(2) %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr class="summary-total">
                                                <td>Total:</td>
                                                <td>
                                                    ₹<span id="cart-total">
                                                        <%= totalDiscountedPrice.toFixed(2) %> <!-- Ensure this is a number -->
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
            
                                    <a href="/checkout" id="checkoutButton" class="btn btn-primary btn-block <%= hasOutOfStockItems ? 'disabled' : '' %>">
                                        Proceed to Checkout
                                    </a>
                                    <% console.log(hasOutOfStockItems, 'stockkkkkkkk in EJS'); %>
                                    
                                </div>
