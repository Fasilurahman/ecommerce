                                                                                            <% coupons.forEach(coupon => { %>
                                                                                                <li class="list-group-item">
                                                                                                    <strong>
                                                                                                        <%= coupon.code %>
                                                                                                    </strong> - Save
                                                                                                    <%= coupon.discountValue %>% off
                                                                                                        <span class="text-muted">(Expires on
                                                                                                            <%= new Date(coupon.validTo).toLocaleDateString() %>)</span>
                                                                                                </li>
                                                                                                <% }) %>
                                                                                        </ul>
                                                                                        <% } else { %>
                                                                                            <p>No active coupons available at the moment.</p>
                                                                                            <% } %>
                                                                                </td>
                                                                            </tr>
                                                    </tbody>
                                                </table>
                        
                        
