                                                <div class="checkout-address-selection">
                                                    <h4>Select a Saved Address</h4>
                                                    <% if (addresses && addresses.length > 0) { %>
                                                        <div class="form-group">
                                                            <select id="addressSelect" name="addressId" class="form-control" required
                                                                onchange="updateAddressDetails(this)">
                                                                <option value="">Select Address</option>
                                                                <% addresses.forEach(address => { %>
                                                                    <% if (address.address && address.address.length > 0) { %>
                                                                        <option value="<%= address._id %>">
                                                                            <%= address.address[0].name %> -
                                                                                <%= address.address[0].city %>,
                                                                                    <%= address.address[0].state %> (<%= address.address[0].pincode %>)
                                                                        </option>
                                                                        <% } else { %>
                                                                            <option disabled>No address details available</option>
                                                                            <% } %>
                                                                                <% }) %>
                                                            </select>
                                                        </div>
                        
                                                        <div id="addressActions" class="mt-3" style="display: none;">
                                                            <a href="/addresses"><button class="btn btn-outline-primary" id="editButton">Edit</button></a>
                                                            <a href="/addresses"><button class="btn btn-outline-danger"
                                                                    id="deleteButton">Delete</button></a>
                                                        </div>
                                                        <% } else { %>
                                                            <p>No saved addresses found. Please add a new address.</p>
                                                            <% } %>
                                                </div>
                        
                                                <h4 class="checkout-title">Or Enter a New Address</h4>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <label for="name">Name *</label>
                                                        <input type="text" id="name" name="name" class="form-control" required
                                                            pattern="^[A-Za-z\s]{3,50}$"
                                                            title="Name should be 3-50 characters long and contain only letters.">
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label for="phone">Phone *</label>
                                                        <input type="tel" id="phone" name="phone" class="form-control" required
                                                            pattern="^\d{10}$" title="Phone number must be exactly 10 digits.">
                                                    </div>
                                                </div>
                        
                                                <label for="state">State *</label>
                                                <input type="text" id="state" name="state" class="form-control" required
                                                    pattern="^[A-Za-z\s]{2,50}$"
                                                    title="State should be 2-50 characters long and contain only letters.">
                        
                                                <label for="city">City *</label>
                                                <input type="text" id="city" name="city" class="form-control" required
                                                    pattern="^[A-Za-z\s]{2,50}$"
                                                    title="City should be 2-50 characters long and contain only letters.">
                        
                                                <label for="landMark">Landmark *</label>
                                                <input type="text" id="landMark" name="landMark" class="form-control" required
                                                    pattern="^.{3,100}$"
                                                    title="Landmark should be between 3-100 characters long.">
                        
                                                <label for="pincode">Postcode / ZIP *</label>
                                                <input type="text" id="pincode" name="pincode" class="form-control" required
                                                    pattern="^\d{5}(-\d{4})?$"
                                                    title="Postcode/ZIP should be 5 digits, optionally followed by a dash and 4 more digits.">
                                            </form>
                                        </div> 
                                        <div class="col-lg-3"> <div class="summary">
                                                <h3 class="summary-title">Your Order</h3>
                                                <table class="table table-summary">
                                                    <thead>
                                                        <tr>
                                                            <th>Product</th>
                                                            <th>Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% if (cart && cart.items && cart.items.length > 0) { %>
                                                            <% cart.items.forEach(item => { %>
                                                                <tr>
                                                                    <td>
                                                                        <%= item.productId ? item.productId.name : 'Unknown Product' %>
                                                                    </td>
                                                                    <td>
                                                                        <% if (item.offerPrice) { %>
                                                                            <!-- Show offer price if available -->
                                                                            <span class="new-price">
                                                                                $<%= (item.offerPrice * item.quantity).toFixed(2) %>
                                                                            </span>
                                                                            <span class="old-price">
                                                                                $<%= (item.productId.price * item.quantity).toFixed(2) %>
                                                                            </span>
                                                                            <% } else { %>
                                                                                <!-- Otherwise, show regular price -->
                                                                                $<%= (item.productId.price * item.quantity).toFixed(2) %>
                                                                                <% } %>
                                                                    </td>
                                                                </tr>
                                                                <% }) %>
                                                                    <% } else { %>
                                                                        <tr>
                                                                            <td colspan="2">No items in cart</td>
                                                                        </tr>
                                                                        <% } %>
                                                                            <tr class="summary-total">
                                                                                <td>Total:</td>
                                                                                <td id="totalPrice">
                                                                                    $<%= cart && cart.totalPrice ? cart.totalPrice.toFixed(2) : '0.00' %>
                                                                                </td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td colspan="2" class="apply-coupon">
                                                                                    <input type="text" id="couponCode"
                                                                                        placeholder="Enter coupon code" class="form-control" />
