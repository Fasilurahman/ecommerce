<script>
    const form = document.getElementById('addressForm');

    // Function to validate the form fields dynamically
    function validateForm() {
        const inputs = form.elements;
        let isValid = true;

        // Check each input field for validity
        for (let i = 0; i < inputs.length; i++) {
            if (!inputs[i].checkValidity()) {
                isValid = false;
                // Show error message directly in the input field
                inputs[i].setCustomValidity(inputs[i].title);
                inputs[i].reportValidity(); // Show validation error
            } else {
                inputs[i].setCustomValidity(""); // Clear previous error message
            }
        }

        // Optional: You can handle what to do if the form is valid
        if (isValid) {
            console.log("Form is valid!");
        }
    }

    // Attach event listeners to each input for real-time validation
    const inputs = form.elements;
    for (let i = 0; i < inputs.length; i++) {
        inputs[i].addEventListener('input', validateForm);
    }
</script>
