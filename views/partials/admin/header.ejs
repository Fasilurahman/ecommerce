        /* Style for the dropdown container */
.dropdown {
  position: relative; /* Position relative to the container */
  display: inline-block; /* Inline-block for layout alignment */
}

/* Style for the dropdown toggle (username link) */
.dropdown-toggle {
  font-size: 16px; /* Font size for better readability */
  color: #333; /* Text color */
  text-decoration: none; /* Remove underline */
  padding: 8px 16px; /* Padding around the text */
  border-radius: 4px; /* Rounded corners for the button */
  transition: background-color 0.3s ease; /* Smooth transition for hover effect */
}

/* Hover effect for the dropdown toggle */
.dropdown-toggle:hover {
  background-color: #f1f1f1; /* Light gray background on hover */
  color: #000; /* Darker text color on hover */
}

/* Style for the dropdown content */
.dropdown-content {
  display: none; /* Hide content initially */
  position: absolute; /* Position absolutely within the dropdown container */
  background-color: #ffffff; /* White background for the dropdown content */
  min-width: 160px; /* Minimum width to ensure sufficient space */
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
  border-radius: 4px; /* Rounded corners for the dropdown content */
  z-index: 1; /* Ensure dropdown content appears above other elements */
}

/* Style for each dropdown item (link) */
.dropdown-content a {
  color: #333; /* Text color */
  padding: 12px 16px; /* Padding for each item */
  text-decoration: none; /* Remove underline from links */
  display: block; /* Block display for full clickable area */
  transition: background-color 0.3s ease; /* Smooth transition for hover effect */
}

/* Hover effect for each dropdown item */
.dropdown-content a:hover {
  background-color: #f1f1f1; /* Light gray background on hover */
}

/* Show dropdown content when hovering over the dropdown container */
.dropdown:hover .dropdown-content {
  display: block; /* Display the dropdown content on hover */
}

/* Optional: Make dropdown content appear from the top */
.dropdown-content {
  transform: translateY(-10px); /* Slightly move up when hidden */
  opacity: 0; /* Initially invisible */
  transition: transform 0.3s ease, opacity 0.3s ease; /* Smooth transition for transform and opacity */
}

.dropdown:hover .dropdown-content {
  transform: translateY(0); /* Move down to its original position */
  opacity: 1; /* Make visible */
}

