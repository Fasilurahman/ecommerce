    <script>
        function addcategory(event) {
            event.preventDefault();
    
            // Clear any previous error messages
            document.getElementById('categoryNameError').classList.add('d-none');
            document.getElementById('categoryDescriptionError').classList.add('d-none');
            document.getElementById('errorMessage').innerHTML = '';
    
            // Get and trim input values
            const categoryName = document.getElementById('categoryName').value.trim();
            const categoryDescription = document.getElementById('categoryDescription').value.trim();
            let isValid = true;
    
            // Category Name Validation
            if (categoryName.length < 3 || categoryName.length > 100) {
                document.getElementById('categoryNameError').textContent = 'Category name must be between 3 and 100 characters long.';
                document.getElementById('categoryNameError').classList.remove('d-none');
                isValid = false;
            } else if (!/^[a-zA-Z0-9\s-]+$/.test(categoryName)) {
                document.getElementById('categoryNameError').textContent = 'Category name contains invalid characters. Only letters, numbers, spaces, and dashes are allowed.';
                document.getElementById('categoryNameError').classList.remove('d-none');
                isValid = false;
            }
    
            // Category Description Validation
            if (categoryDescription.length < 5 || categoryDescription.length > 500) {
                document.getElementById('categoryDescriptionError').textContent = 'Description must be between 5 and 500 characters long.';
                document.getElementById('categoryDescriptionError').classList.remove('d-none');
                isValid = false;
            }
    
            // If validation fails, stop form submission
            if (!isValid) {
                return;
            }
    
            // Prepare category data
            const categoryData = {
                name: categoryName,
                description: categoryDescription
            };
    
            // Proceed with form submission via fetch
            fetch('/admin/category/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(categoryData)
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    Swal.fire('Success', 'Category has been added successfully.', 'success')
                    .then(() => {
                        // Reset the form after successful submission
                        document.getElementById('addCategoryForm').reset();
                        location.reload(); // Optionally reload the page
                    });
                } else {
                    Swal.fire('Error', data.message || 'There was an error adding the category.', 'error');
                }
            })
            .catch(error => {
                console.error('Error in adding category:', error);
                Swal.fire('Error', 'There was an error adding the category.', 'error');
            });
        }
    </script>
    

    
