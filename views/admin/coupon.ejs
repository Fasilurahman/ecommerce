        function addCoupon(event) {
        event.preventDefault();
        
        // Get form values
        const couponCode = document.getElementById('couponCode').value.trim();
        const discountType = document.getElementById('discountType').value;
        const discountValue = document.getElementById('discountValue').value;
        const expiryDate = document.getElementById('expiryDate').value;
        const minOrderAmount = document.getElementById('minOrderAmount').value;
        const maxOrderAmount = document.getElementById('maxOrderAmount').value;
        const description = document.getElementById('description').value.trim();

        // Regex for validating coupon code (allow alphanumeric, length of 5)
        const codeRegex = /^[A-Za-z0-9]{5}$/;
        
        // Date validation (expiry date should be in the future)
        const today = new Date().toISOString().split('T')[0]; // Get today's date in YYYY-MM-DD format
        
        // Validation flags
        let isValid = true;
        let errorMessage = '';

        // Validate coupon code
        if (!codeRegex.test(couponCode)) {
            isValid = false;
            errorMessage = 'Coupon code must be 5 alphanumeric characters.';
        }
        
        // Validate discount type
        if (discountType !== 'percentage' && discountType !== 'fixed') {
            isValid = false;
            errorMessage = 'Please select a valid discount type.';
        }

        // Validate discount value (must be greater than 0)
        if (isNaN(discountValue) || discountValue <= 0) {
            isValid = false;
            errorMessage = 'Discount value must be greater than 0.';
        }

        // Validate expiry date (must be in the future)
        if (!expiryDate || expiryDate <= today) {
            isValid = false;
            errorMessage = 'Expiry date must be a future date.';
        }

        // Validate minimum order amount
        if (isNaN(minOrderAmount) || minOrderAmount <= 0) {
            isValid = false;
            errorMessage = 'Minimum order amount must be a positive number.';
        }

        // Validate maximum order amount (must be greater than or equal to minimum)
        if (isNaN(maxOrderAmount) || maxOrderAmount <= 0 || Number(maxOrderAmount) < Number(minOrderAmount)) {
            isValid = false;
            errorMessage = 'Maximum order amount must be greater than or equal to the minimum order amount.';
        }

        if (!isValid) {
            Swal.fire('Validation Error', errorMessage, 'error');
            return; // Prevent the form from submitting if validation fails
        }

        // Prepare coupon data object
        const couponData = {
            code: couponCode,
            discountType: discountType,
            discountValue: discountValue,
            expiryDate: expiryDate,
            minOrderAmount: minOrderAmount,
            maxOrderAmount: maxOrderAmount,
            description: description
        };

        // Send the coupon data to the server
        fetch('/admin/coupon/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(couponData)
        }).then(res => res.json())
        .then(data => {
            if (data.message === 'Coupon code already exists') {
                // If the coupon code exists, show SweetAlert
                Swal.fire('Error', 'Coupon code already exists. Please try another code.', 'error');
            } else {
                Swal.fire('Success', 'Coupon has been added successfully.', 'success')
                .then(() => {
                    location.reload();
                });
            }
        }).catch(error => {
            console.error('Error in adding coupon:', error);
            Swal.fire('Error', 'There was an error adding the coupon.', 'error');
        });
    }
