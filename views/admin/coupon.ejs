                                    <h1 class="h3 mb-2 text-gray-800">Manage Coupons</h1>
                                    <p class="mb-4">This page allows you to manage coupons for your store. You can add, view, or update coupons as needed.</p>
                
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="m-0 font-weight-bold text-primary">Coupon List</h6>
                                                <button class="btn btn-primary" data-toggle="modal" data-target="#addCouponModal">Add Coupon</button>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="couponTable" width="100%" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>Coupon Code</th>
                                                        <th>Discount</th>
                                                        <th>Discount Value</th>
                                                        <th>Expiry Date</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% coupons.forEach(coupon => { %>
                                                        <tr>
                                                            <td><%= coupon.code %></td>
                                                            <td><%= coupon.discountType %></td>
                                                            <td><%= coupon.discountValue %></td>
                                                            <td><%= coupon.expiryDate %></td>
                                                            <td>
                                                                <% if (!coupon.isBlocked) { %>
                                                                    <button onclick="blockCoupon('<%= coupon._id %>')" class="btn btn-warning">Block</button>
                                                                <% } else { %>
                                                                    <button onclick="unblockCoupon('<%= coupon._id %>')" class="btn btn-success">Unblock</button>
                                                                <% } %>
                                                                <button
                                                                    onclick="editCoupon('<%= coupon._id %>', '<%= encodeURIComponent(coupon.code) %>', '<%= coupon.discountType %>', '<%= coupon.discountValue %>', '<%= coupon.expiryDate %>', '<%= coupon.minOrderAmount %>', '<%= coupon.maxOrderAmount %>', '<%= encodeURIComponent(coupon.description) %>')"
                                                                    class="btn btn-success btn-icon-split"
                                                                    style="margin-right: 5px;">
                                                                    <span class="icon text-white-50">
                                                                        <i class="fas fa-edit"></i>
                                                                    </span>
                                                                    <span class="text">Edit</span>
                                                                </button>

                                                                <button 
                                                                    onclick="deleteCoupon('<%= coupon._id %>')"
                                                                    class="btn btn-danger btn-icon-split">
                                                                    <span class="icon text-white-50">
                                                                        <i class="fas fa-trash"></i>
                                                                    </span>
                                                                    <span class="text">Delete</span>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="pagination d-flex justify-content-center">
                                        <ul class="pagination">
                                          <!-- Previous Button: Disabled on the first page -->
                                          <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= couponsPerPage %>">Previous</a>
                                          </li>
                                      
                                          <!-- Page Numbers -->
                                          <% for (let i = 1; i <= totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                              <a class="page-link" href="?page=<%= i %>&limit=<%= couponsPerPage %>"><%= i %></a>
                                            </li>
                                          <% } %>
                                      
                                          <!-- Next Button: Disabled on the last page -->
