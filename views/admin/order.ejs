<script>
    document.addEventListener('DOMContentLoaded', function () {
        const forms = document.querySelectorAll('form'); // Select all forms

        forms.forEach(form => {
            form.addEventListener('submit', function (event) {
                const orderStatusSelect = form.querySelector('select[name="status"]');
                const selectedStatus = orderStatusSelect.value;

                // Check if the order status is cancelled
                if (form.closest('tr').querySelector('td:nth-child(5)').innerText === 'Cancelled' && selectedStatus !== 'Cancelled') {
                    event.preventDefault(); // Prevent form submission
                    Swal.fire({
                        icon: 'error',
                        title: 'Cannot Change Status',
                        text: 'You cannot change the status of a cancelled order!',
                        confirmButtonText: 'Okay'
                    });
                }
            });
        });
    });
