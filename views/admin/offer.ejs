   <script>
    async function fetchEntities(offerType, selectElement) {
        
    try {
        const response = await fetch(`/admin/entities/${offerType}`);
        const entities = await response.json();

        selectElement.innerHTML = '';
        entities.forEach(entity => {
            selectElement.innerHTML += `<option value="${entity._id}">${entity.brandName || entity.name}</option>`;
        });
    } catch (error) {
        console.error('Error fetching entities:', error);
    }
}

    function toggleEntitySelection() {
        const offerType = document.getElementById('offerType').value;
        const entitySelect = document.getElementById('entity');
