    <script>
        function addBrand() {
        
          const brandName = document.getElementById('brandName').value.trim();
          const brandDescription = document.getElementById('brandDescription').value.trim();
          
          // Reset any existing error messages
          document.getElementById('categoryNameError').classList.add('d-none');
          document.getElementById('categoryDescriptionError').classList.add('d-none');
          
          let isValid = true;
      
          // Brand Name validation (length and characters)
          if (brandName.length < 3 || brandName.length > 100) {
            document.getElementById('categoryNameError').textContent = 'Brand name must be between 3 and 100 characters long.';
            document.getElementById('categoryNameError').classList.remove('d-none');
            isValid = false;
          } else if (!/^[a-zA-Z0-9\s-]+$/.test(brandName)) {
            document.getElementById('categoryNameError').textContent = 'Brand name contains invalid characters. Only letters, numbers, spaces, and dashes are allowed.';
            document.getElementById('categoryNameError').classList.remove('d-none');
            isValid = false;
          }
      
          // Brand Description validation (length and harmful content check)
          if (brandDescription.length < 3 || brandDescription.length > 500) {
            document.getElementById('categoryDescriptionError').textContent = 'Description must be between 5 and 500 characters long.';
            document.getElementById('categoryDescriptionError').classList.remove('d-none');
            isValid = false;
          }
      
          // If validation fails, prevent form submission
          if (!isValid) {
            return;
          }
      
          // Prepare brand data object
          const brandData = {
            brandName: brandName,
            brandDescription: brandDescription
          };
      
          // Proceed to submit data via fetch API
          fetch('/admin/brand/add', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(brandData)
          })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              Swal.fire(
                'Added!',
                'The brand has been added successfully.',
                'success'
              ).then(() => {
                // Reload page or reset form on success
                window.location.reload();
                document.getElementById('addCategoryForm').reset();
              });
            } else {
              Swal.fire('Error!', 'There was an issue adding the brand. Please try again.', 'error');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            Swal.fire('Error!', 'An error occurred while adding the brand.', 'error');
          });
        }
      </script>
      

<script>
  function edit(id, name, description) {
    document.getElementById('editCategoryModal').setAttribute('data-id', id);
    document.getElementById('helloworld').value = name;
    document.getElementById('brandId').value = id;
    document.getElementById('editCategoryDescription').value = description;

    console.log('Editing brand:', id, name, description);

    $('#editCategoryModal').modal('show');
}

function saveBrandEdit() {
    const brandId = document.getElementById('editCategoryModal').getAttribute('data-id');
    const brandName = document.getElementById('helloworld').value;
    const brandDescription = document.getElementById('editCategoryDescription').value;

    const data = {
        id: brandId,
        name: brandName,
        description: brandDescription
    };

    fetch(`/admin/editbrand`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(data => {
        Swal.fire({
            title: 'Success',
            text: 'The brand has been updated.',
            icon: 'success'
        }).then(() => {
            $('#editCategoryModal').modal('hide');
            window.location.href = '/admin/brand';
        });
    })
    .catch((error) => {
        console.error('Error:', error);
        Swal.fire(
            'Error',
            'An error occurred while updating the brand.',
            'error'
        );
    });
}

</script>
<script>
  function deleteBrand(id) {
    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            const delBrand = {
                id: id
            };

            fetch('/admin/deleteBrand', { 
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(delBrand)
            })
            .then(res => res.json())
            .then(data => {
                Swal.fire(
                    'Deleted!',
                    'The brand has been deleted.',
                    'success'
                ).then(() => {
                    window.location.reload(); 
                });
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire(
                    'Error!',
                    'An error occurred while deleting the brand.',
                    'error'
                );
            });
        }
    });
}
